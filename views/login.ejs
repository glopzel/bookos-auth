<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login to Book Tracker</title>
    <!-- tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- daisyUI -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.24.0/dist/full.css" rel="stylesheet" type="text/css" />
</head>
<body class="flex flex-col justify-center h-screen items-center">
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <a href="/" class="fixed top-0 left-0 m-6 btn btn-primary">Go Back</a>

    <div class="w-1/3">
        <h1 class="text-3xl text-center mb-8">Login</h1>
        <form action="/login" method="POST" class="flex flex-col">

            <input type="email" id="email" name="email" placeholder="Enter Email" class="input input-bordered input-accent max-w-xs mb-8 w-full self-center">

            <input type="password" name="password" placeholder="Enter Password" class="input input-bordered input-accent w-full max-w-xs mb-8 self-center">

            <input type="submit" class="btn btn-secondary self-center">
        </form>
    </div>
    
</body>
</html>