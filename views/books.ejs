<body>
    <main class="flex flex-col items-center">
        <div class="mt-8 ml-8 mb-5 text-5xl">
            <h1>
                Books
            </h1>
        </div>
        
        <div class="container flex justify-center">
            <form action="/books/addBook" method="post">

                    <input type="text" placeholder="Enter Book Title" name="bookTitle" id="title" class="input input-bordered input-secondary max-w-xs mr-5">
   
                    <input type="text" placeholder="Enter Book Author" name="bookAuthor" id="author" class="input input-bordered input-secondary max-w-xs mr-5">
                        
                    <button id="submit-btn" type="submit" class="btn btn-secondary">Submit</button>

            </form>
        </div>
        
        <div class="container border border-blue-500">
            <% totalBooks.forEach(element => { %>
            <div class="card w-96 bg-base-100 shadow-xl image-full card-content m-6 <%= element.read === true ? 'bg-success' : 'white'%>" data-id="<%=element._id%>">
                <!-- <figure><img src="https://placeimg.com/400/225/arch" alt="Shoes" /></figure> -->
                <div class="card-body">
                  <h2 class="card-title"><%= element.bookTitle %></h2>
                  <p><%= element.bookAuthor %></p>
                  <div class="card-actions justify-end btns-update">
                    <!-- this will always be there -->
                    <button class="btn btn-outline btn-error">
                        Delete
                    </button>

                    <!-- if it is read, then dont hide it -->
                    <button class="unread btn btn-outline btn-warning <%=element.read === false ? 'hidden' : 'notHidden' %>">
                        UNREAD
                    </button>

                    <!-- if it is read then hide it -->
                    <button class="read btn btn-outline btn-success <%=element.read === true ? 'hidden' : 'notHidden' %>">
                        READ
                    </button>
                  </div>
                </div>
            </div>
            <% }) %>
        </div>
        

